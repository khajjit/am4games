{
  "name": "user",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "sudo docker-compose up user_dev database_dev server_dev",
    "start": "yarn install --check-files && NODE_ENV=development vue-cli-service serve",
    "build": "yarn install --check-files && NODE_ENV=production vue-cli-service build",
    "lint": "yarn install --check-files && vue-cli-service lint"
  },
  "dependencies": {
    "axios": "0.18.0",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-eslint": "^3.0.5",
    "@vue/cli-service": "^3.0.5",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.17"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
